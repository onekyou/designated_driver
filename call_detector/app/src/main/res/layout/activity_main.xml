<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 상단 여백 - 시각적 중앙 위치로 변경 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 통화감지 중 텍스트 레이아웃 조정 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="20dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/statusTextBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/call_detecting"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/statusTextDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="28sp"
            android:textStyle="bold"
            android:minWidth="60dp"/>
    </LinearLayout>

    <!-- 하단 여백 - 상단 여백과 동일하게 조정 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 권한 상태 텍스트는 숨김 -->
    <TextView
        android:id="@+id/permissionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/required_permissions"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>
        
    <!-- 최근 통화 정보 헤더 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_info_header"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>
    
    <!-- 저장된 데이터 카드 - 내용만 스크롤 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginBottom="36dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5F5F5">
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/savedDataText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading_data"
                android:textSize="14sp"
                android:padding="12dp"/>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/startServiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_service"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <!-- 디바이스 설정 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        
        <TextView
            android:id="@+id/deviceNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/device_name_default"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:gravity="center"
            android:background="@drawable/bg_device_name"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"/>
            
        <Button
            android:id="@+id/deviceSettingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:text="@string/device_settings"
            android:textStyle="bold"/>
    </LinearLayout>
    
    <!-- 앱 버튼 레이아웃 (일렬로 배치) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_reset"
            android:layout_marginBottom="8dp"/>
            
        <Button
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_exit"/>
    </LinearLayout>

</LinearLayout> 